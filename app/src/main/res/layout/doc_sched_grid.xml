<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_doc_shedul"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grid_text"
            android:textColor="#000000"
            android:textSize="@dimen/text_18"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grid_text2"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/grid_text"
            android:maxLines="2"
            android:textSize="@dimen/text_16"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grid_text3"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/grid_text2"
            android:maxLines="2"
            android:textSize="@dimen/text_16"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_appointment"
            android:layout_below="@+id/grid_text3"
            android:layout_marginTop="15dp"
            android:background="@drawable/back_scedu"
            android:text="@string/rquestForAppointment"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_16"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</RelativeLayout>