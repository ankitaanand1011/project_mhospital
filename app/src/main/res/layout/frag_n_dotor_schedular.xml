<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_doctor"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/userss"
        android:layout_marginTop="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Lin_top"
        android:orientation="vertical"
        android:layout_below="@+id/image_doctor"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_doc_name"
            android:layout_gravity="center"
            android:textSize="@dimen/text_20"
            android:textColor="#17bb70"
            android:drawableRight="@mipmap/ic_info"
            android:drawableEnd="@mipmap/ic_info"
            android:drawablePadding="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_docotr_speciality"
            android:layout_gravity="center"
            android:textSize="@dimen/text_14"
            android:gravity="center"
            android:textColor="#000000"
            />
    </LinearLayout>
    <GridView
        android:gravity="center"
        android:padding="5dp"
        android:clipToPadding="false"
        android:columnWidth="100dp"
        android:numColumns="2"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:layout_below="@id/Lin_top"
        android:stretchMode="columnWidth"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/grid"
        android:layout_margin="5dp"
        />

    <ProgressBar
        android:id="@+id/pb_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/norecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_schedule"
        android:textSize="@dimen/text_12"
        />

</RelativeLayout>