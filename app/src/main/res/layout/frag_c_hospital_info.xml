<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_logo"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:adjustViewBounds="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/applogoblue"/>

                <View
                    android:id="@+id/view"
                    android:layout_marginTop="10dp"
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/image_logo"
                    android:layout_marginLeft="10dp"
                    android:background="#e5e5e5"
                    android:layout_marginRight="10dp">
                </View>

                <TextView
                    android:id="@+id/text_aboutus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_20"
                    android:layout_below="@+id/view"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="@string/about_hospital"/>


                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:id="@+id/text_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/text_aboutus"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/text_our_branches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_info"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/text_18"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text="@string/our_branches"/>

                <LinearLayout
                    android:id="@+id/Lin_branches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:layout_below="@+id/text_our_branches">
                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    <ProgressBar
        android:id="@+id/pb_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    </RelativeLayout>
